    <!-- Main Content Area -->
    <div class="main-content">
        <!-- Form Container (Transparent Box) -->
        <div class="form-container bg-opacity-50 bg-white shadow-lg rounded-lg p-5">
            <!-- Your Form EJS code here -->
            <div class="container mx-auto px-4">
                <div class="bg-white shadow overflow-hidden sm:rounded-lg mt-5">
                    
                    <form action="/api/auth/submit-form" method="post">
                        <div class="px-4 py-5 sm:px-6">
                            <h2 class="text-lg leading-6 font-medium text-gray-900">Travel Management Dashboard</h2>
                            <p class="mt-1 max-w-2xl text-sm text-gray-500">Hello, <%= email %>. Please fill out the form with your travel details.</p>
                        </div>
        
                        <!-- User Data Display Section -->
                        <!-- User Information Section, Adjusted for Inline Display -->
        <!-- User Information Section with Professional Styling and Animated Photo -->
        <!-- User Information Section with Two Rows of Details and Animated Photo -->
        <% if (userData) { %>
            <div class="px-4 py-5 sm:px-6 flex" style="background-color: #f7fafc; border-left: 4px solid #3182ce;">
                <!-- Animated Professional Photo Placeholder -->
                <div class="w-24 h-24 flex-none rounded-full overflow-hidden mr-4">
                    <img src="pics/emp.jpg" alt="Professional" style="object-fit: contain; width: 100%; height: 100%;" class="animate-pulse">
                </div>
                
                <!-- User Information Styled Elegantly in Two Rows -->
                <div class="flex-grow">
                    <h3 class="text-lg font-semibold" style="color: #3182ce;">User Information</h3>
                    <p style="color: #4a5568;">A summary of your details:</p>
                    <div class="flex flex-wrap -mx-2 mt-2">
                        <div class="w-1/2 px-2">
                            <p><strong style="color: #2d3748;">Name:</strong> <span style="color: #2c5282;"><%= userData.name %></span></p>
                        </div>
                        <div class="w-1/2 px-2">
                            <p><strong style="color: #2d3748;">Mobile Number:</strong> <span style="color: #2c5282;"><%= userData.mobileNumber %></span></p>
                        </div>
                        <div class="w-1/2 px-2">
                            <p><strong style="color: #2d3748;">Place:</strong> <span style="color: #2c5282;"><%= userData.place %></span></p>
                        </div>
                        <div class="w-1/2 px-2">
                            <p><strong style="color: #2d3748;">Designation:</strong> <span style="color: #2c5282;"><%= userData.designation %></span></p>
                        </div>
                        <div class="w-full px-2">
                            <p><strong style="color: #2d3748;">Manager:</strong> <span style="color: #2c5282;"><%= userData.manager %></span></p>
                        </div>
                    </div>
                </div>
            </div>
            <% } else { %>
            <p class="px-4 py-5 sm:px-6">No user data available. Please update your profile.</p>
            <% } %>
            
        
        
        
                        <!-- More form fields will be added here in the next steps -->
                        <div class="border-t border-gray-200">
                            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Type of Travel Service Required</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <div class="flex items-center mb-4">
                                        <input id="domestic" name="Travel Service" type="radio" value="Domestic/Rail Ticket" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300">
                                        <label for="domestic" class="ml-3 block text-sm font-medium text-gray-700">
                                            Domestic/Rail Ticket
                                        </label>
                                    </div>
                                    <div class="flex items-center mb-4">
                                        <input id="international" name="Travel Service" type="radio" value="International Ticket/Forex" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300">
                                        <label for="international" class="ml-3 block text-sm font-medium text-gray-700">
                                            International Ticket/Forex
                                        </label>
                                    </div>
                                    <div class="flex items-center">
                                        <input id="forex" name="Travel Service" type="radio" value="FOREX only" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300">
                                        <label for="forex" class="ml-3 block text-sm font-medium text-gray-700">
                                            FOREX only
                                        </label>
                                    </div>
                                </dd>
                            </div>
                            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Passenger Details</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <p class="text-red-500 mb-3">Travel: Before you travel, please familiarize yourself with the applicable rules of the arrival city and state.</p>
                                    <div class="flex flex-col mb-4">
                                        <label for="typeOfVisit" class="block text-sm font-medium text-gray-700 mb-2">Type of Visit</label>
                                        <select id="typeOfVisit" name="Type of Visit" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                            <option value="Business">Business</option>
                                            <option value="Personal">Personal</option>
                                        </select>
                                    </div>
                                    <div class="flex flex-col">
                                        <label for="nameOnTicket" class="block text-sm font-medium text-gray-700 mb-2">Name to be Printed on Ticket:</label>
                                        <input type="text" id="nameOnTicket" name="Name on Ticket" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                    </div>
                                    <div class="flex flex-col">
                                        <label for="contactNumber" class="block text-sm font-medium text-gray-700 mb-2">Phone number</label>
                                        <input type="text" id="nameOnTicket" name="Mobile Number" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                    </div>
                                </dd>
                            </div>
                            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Visit Details</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <div class="flex flex-col mb-4">
                                        <label for="jobProjectRefNo" class="block text-sm font-medium text-gray-700 mb-2">Job/Project Ref No.:</label>
                                        <input type="text" id="jobProjectRefNo" name="Job Project Ref. No." class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                    </div>
                                    <div class="flex flex-col mb-4">
                                        <label for="purposeOfTravel" class="block text-sm font-medium text-gray-700 mb-2">Purpose of Travel:</label>
                                        <select id="purposeOfTravel" name="Purpose of Travel" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                            <option value="Training">Training</option>
                                            <option value="To Train">To Train</option>
                                            <option value="Some Work">Some Work</option>
                                        </select>
                                    </div>
                                    <div class="flex flex-col">
                                        <label for="reimbursable" class="block text-sm font-medium text-gray-700 mb-2">Reimbursable/Non Reimbursable from Client:</label>
                                        <select id="reimbursable" name="Reimbursable" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                            <option value="Yes">Yes</option>
                                            <option value="No">No</option>
                                        </select>
                                    </div>
                                </dd>
                            </div>
                            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">CREATE TR FOR SELF/OTHERS</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <div class="flex items-center">
                                        <select id="trFor" name="Ticket For" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                            <option value="Self">Self</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                </dd>
                            </div>
                            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">NEW/REGULARIZATION</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <div class="flex items-center mb-4">
                                        <input id="newTravelRequest" name="travelRequestType" type="radio" value="New" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300">
                                        <label for="newTravelRequest" class="ml-3 block text-sm font-medium text-gray-700">
                                            New Travel Request
                                        </label>
                                    </div>
                                    <div class="flex items-center">
                                        <input id="regularization" name="travelRequestType" type="radio" value="Regularization" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300">
                                        <label for="regularization" class="ml-3 block text-sm font-medium text-gray-700">
                                            Regularization
                                        </label>
                                    </div>
                                </dd>
                            </div>
                            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Selected Flight Details</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <div id="flightDetailsContainer">
                                        <div class="overflow-auto">
                                            <table class="min-w-full divide-y divide-gray-200 mb-4">
                                                <thead class="bg-gray-50">
                                                    <tr>
                                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mode</th>
                                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dep. Date</th>
                                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dep. Time</th>
                                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">From</th>
                                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">To</th>
                                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Class</th>
                                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="bg-white divide-y divide-gray-200" id="flightDetailsRows">
                                                    <!-- Dynamically added rows for flight details will go here -->
                                                    
                                                </tbody>
                                            </table>
                                            <button type="button" id="addFlightDetailRow" class="mt-3 py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
                                                Add Another Ticket
                                            </button>
                                        </div>
                                    </div>
                                </dd>
                            </div>
        
          
                            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Preference Information</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <div class="flex flex-col mb-4">
                                        <label for="mealPreference" class="block text-sm font-medium text-gray-700 mb-2">Meal Preference</label>
                                        <select id="mealPreference" name="Meal Preference" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                            <option value="Veg">Veg</option>
                                            <option value="Non-Veg">Non-Veg</option>
                                        </select>
                                    </div>
                                    <div class="flex flex-col">
                                        <label for="seatPreference" class="block text-sm font-medium text-gray-700 mb-2">Air Seat Preference</label>
                                        <select id="seatPreference" name="Seat Preference" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                            <option value="Window">Window</option>
                                            <option value="Aisle">Aisle</option>
                                        </select>
                                    </div>
                                </dd>
                            </div>
                            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Approver Details</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <label for="approverName" class="block text-sm font-medium text-gray-700 mb-2">Approver Name</label>
                                    <select id="approverName" name="Approver Name" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                        <option value="Tejas Rai">Tejas Rai</option>
                                        <option value="Aashutosh">Aashutosh</option>
                                        <option value="Gurudeep">Gurudeep</option>
                                    </select>
                                </dd>
                            </div>
                            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Additional Details</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <textarea id="additionalDetails" name="Additional Details" rows="4" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md"></textarea>
                                </dd>
                            </div>
                            <!-- Submit Button -->
                            <div class="flex justify-end px-4 py-3 bg-gray-50 text-right sm:px-6">
                                <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        
        
        
            
        </div>
    </div>

    <script src="/index.js"></script>
</body>
</html>
